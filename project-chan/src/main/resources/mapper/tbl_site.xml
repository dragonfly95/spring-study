<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ktds.youtube.video.mapper.SiteMapper">

  <select id="findAll" resultType="siteVO">
    select site_id, site_name from tbl_site
  </select>

  <select id="findOne" parameterType="int" resultType="siteVO">
    select site_id, site_name from tbl_site where site_id = #{siteId}
  </select>

  <insert id="insert" parameterType="siteVO">
    insert into tbl_site (site_id, site_name)
    values (#{siteId}, #{siteName})
  </insert>

  <update id="update" parameterType="siteVO">
    update tbl_site set
    site_name = #{siteName})
    where site_id = #{siteId}
  </update>

  <delete id="delete" parameterType="int">
    delete from tbl_site where site_id = #{siteId}
  </delete>
</mapper>